# Prompts for input with the given question; read the response from $REPLY
function ask() {
  printf "$1 "
  read
}

# Prompts for yes or no with the given question
function ask_y_n() {
  printf "$1 (y/n) "
  read
}

# Returns true if the last reply was yes
function answer_is_yes() {
  if [["$REPLY" =~ ^[Yy]$ ]]; then
    return 1
  else
    return 0
  fi
}
